{
  "name": "react-touch-drag-slider",
  "version": "2.2.6",
  "description": "Touch and drag slider carousel component for React",
  "author": "bushblade",
  "license": "MIT",
  "repository": "bushblade/react-touch-drag-slider",
  "keywords": [
    "pointer",
    "mouse",
    "swipe",
    "slider",
    "touch",
    "mobile",
    "carousel",
    "gallery",
    "slideshow"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "biome lint src/**/*.{ts,tsx}"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "peerDependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@testing-library/react": "^16.3.0",
    "@types/jsdom": "^21.1.7",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist"
  ],
  "module": "./dist/lib.es.js",
  "types": "./dist/lib/index.d.ts",
  "main": "./dist/lib.es.js",
  "exports": {
    ".": {
      "types": "./dist/lib/index.d.ts",
      "import": "./dist/lib.es.js",
      "require": "./dist/lib.umd.js"
    }
  }
}
